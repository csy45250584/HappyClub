<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_124"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_serve_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="辅助老人操作手机"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_30px"/>

        <TextView
            android:id="@+id/tv_serve_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"
            android:text="女性会操作手机"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:id="@+id/tv_serve_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"
            android:text="女性会操作手机女性会操"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"
            android:text="积分:80"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_26px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_review_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="未完成"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/text_26px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete_recourse"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_my_recourse_button"
            android:gravity="center"
            android:text="删除求助"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_24px"/>

        <TextView
            android:id="@+id/tv_right_button"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@drawable/bg_my_recourse_button"
            android:gravity="center"
            android:text="重新求助"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_24px"/>

    </LinearLayout>
</RelativeLayout>