<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="葱油拌面"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_28px"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_food_count"
            android:padding="@dimen/dp_6"
            android:src="@drawable/jh1"/>

        <TextView
            android:id="@+id/tv_food_count"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_food_count2"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_26px"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_food_count"
            android:padding="@dimen/dp_6"
            android:src="@drawable/jh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_140"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:drawableLeft="@drawable/zy6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_26px"/>

    </LinearLayout>
</FrameLayout>