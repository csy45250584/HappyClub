<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_activity_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_34px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动详情"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_30px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="活动时间"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:id="@+id/tv_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:drawableLeft="@drawable/course_dot"
                    android:drawablePadding="@dimen/dp_6"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_28px"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="预约人数"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:id="@+id/tv_activity_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:drawableLeft="@drawable/course_dot"
                    android:drawablePadding="@dimen/dp_6"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="活动描述"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:id="@+id/tv_activity_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:drawableLeft="@drawable/course_dot"
                    android:drawablePadding="@dimen/dp_6"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="活动地址"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:id="@+id/tv_activity_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:drawableLeft="@drawable/course_dot"
                    android:drawablePadding="@dimen/dp_6"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_28px"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.rey.material.widget.Button
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="立即报名"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        app:rd_style="@style/NoCornerButtonStyle"
        />
</LinearLayout>