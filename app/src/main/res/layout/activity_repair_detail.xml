<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haokuo.midtitlebar.MidTitleBar
        android:id="@+id/mid_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:midTitle="报修详情"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.haokuo.happyclub.view.TitleTextView
                android:id="@+id/tv_repair_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                app:titleText="姓         名"
                />

            <com.haokuo.happyclub.view.TitleTextView
                android:id="@+id/tv_repair_tel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_1"
                app:titleText="联系方式"/>

            <com.haokuo.happyclub.view.TitleTextView
                android:id="@+id/tv_repair_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                app:titleText="报修地点"/>

            <com.haokuo.happyclub.view.TitleTextView
                android:id="@+id/tv_repair_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_1"
                app:titleText="报修类型"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:paddingTop="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修内容"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_28px"/>

                <TextView
                    android:id="@+id/tv_repair_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/colorWhite"
                    android:gravity="left|top"
                    android:padding="@dimen/dp_2"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/text_28px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传图片"
                    android:textColor="@color/colorText1"
                    android:textSize="@dimen/text_28px"/>

                <ImageView
                    android:id="@+id/iv_repair_image"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/tianjia_add"/>
            </LinearLayout>

            <com.haokuo.happyclub.view.TitleTextView
                android:id="@+id/tv_repair_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_1"
                app:titleText="上报时间"/>

            <com.haokuo.happyclub.view.TitleTextView
                android:id="@+id/tv_repair_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                app:titleText="处理状态"/>

            <LinearLayout
                android:id="@+id/ll_reply_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_25"
                    android:paddingTop="@dimen/dp_14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回复内容"
                        android:textColor="@color/colorText1"
                        android:textSize="@dimen/text_28px"/>

                    <TextView
                        android:id="@+id/tv_repair_reply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/colorWhite"
                        android:gravity="left|top"
                        android:padding="@dimen/dp_2"
                        android:textColor="@color/colorText2"
                        android:textSize="@dimen/text_28px"/>
                </LinearLayout>

                <com.haokuo.happyclub.view.TitleTextView
                    android:id="@+id/tv_reply_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_1"
                    app:titleText="回复人"
                    />

                <com.haokuo.happyclub.view.TitleTextView
                    android:id="@+id/tv_reply_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_1"
                    app:titleText="回复时间"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>