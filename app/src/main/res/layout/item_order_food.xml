<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">

    <ImageView
        android:id="@+id/iv_food_pic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_food_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小炒黄牛肉"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:id="@+id/tv_food_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="X1"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="10"
        android:textColor="@color/colorDarkOrange"
        android:textSize="@dimen/text_24px"/>

</RelativeLayout>