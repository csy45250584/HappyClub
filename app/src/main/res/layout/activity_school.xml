<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haokuo.midtitlebar.MidTitleBar
        android:id="@+id/mid_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:midTitle="幸福学堂"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/indicator_school"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/colorWhite"
        app:tl_divider_width="0dp"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="@dimen/dp_1_5"
        app:tl_indicator_height="@dimen/dp_3"
        app:tl_tab_space_equal="true"
        app:tl_tab_width="@dimen/dp_70"
        app:tl_textBold="NONE"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/colorText3"
        app:tl_textsize="@dimen/text_24px"
        app:tl_underline_color="@color/colorDivider"
        app:tl_underline_height="1dp">
    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_school"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>