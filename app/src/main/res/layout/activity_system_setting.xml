<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haokuo.midtitlebar.MidTitleBar
        android:id="@+id/mid_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:midTitle="系统设置"/>

    <com.haokuo.happyclub.view.SettingItemView
        android:id="@+id/siv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_8"
        app:leftText="清除缓存"
        app:rightIcon="@drawable/v"
        />

    <com.haokuo.happyclub.view.SettingItemView
        android:id="@+id/siv_about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_8"
        app:leftText="关于我们"
        app:rightIcon="@drawable/v"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.rey.material.widget.Button
        android:id="@+id/btn_logout"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@drawable/bg_red_button"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        app:rd_style="@style/LoginButtonStyle"
        />
</LinearLayout>