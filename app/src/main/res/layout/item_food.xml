<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/dp_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_food_pic"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/zy1"/>

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_food_pic"
            android:singleLine="true"
            android:text="小炒黄牛肉"
            android:textColor="@color/colorText1"
            android:textSize="@dimen/text_28px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_food_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@id/iv_food_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_24px"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:text="18"
            android:textColor="#ED6C30"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:text="/"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_26px"/>

        <TextView
            android:id="@+id/tv_food_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:drawableLeft="@drawable/zy6"
            android:drawablePadding="@dimen/dp_2"
            android:text="80"
            android:textColor="#ED6C30"
            android:textSize="@dimen/text_24px"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_food_count"
            android:padding="@dimen/dp_6"
            android:src="@drawable/jh1"/>

        <TextView
            android:id="@+id/tv_food_count"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_food_count2"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_26px"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_food_count"
            android:padding="@dimen/dp_6"
            android:src="@drawable/jh"/>
    </LinearLayout>

</LinearLayout>