<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_132"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_school_pic"
        android:layout_width="@dimen/dp_132"
        android:layout_height="@dimen/dp_132"
        android:src="@mipmap/ic_launcher_round"/>

    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:padding="@dimen/dp_13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="课程标题"
                android:textColor="@color/colorText1"
                android:textSize="@dimen/text_30px"/>

            <TextView
                android:id="@+id/tv_course_description"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_6"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="课程描述课程描述课程描述课程描述课程描述课程描述课程描述课程描述课程描述课程描述"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/text_20px"/>

            <TextView
                android:id="@+id/tv_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_30"
                android:singleLine="true"
                android:text="2018-11-13 周一到周五 12:00-16:00"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/text_20px"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="65"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_34px"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sign_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:singleLine="true"
                android:text="45/50"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/text_22px"/>

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/bg_orange_full_button"
                android:gravity="center"
                android:text="我要报名"
                android:textColor="@color/colorWhiteText1"
                android:textSize="@dimen/text_22px"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>