<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string"/>
    <attr name="titleColor" format="color"/>
    <attr name="titleText" format="string"/>
    <attr name="editorHint" format="string"/>
    <declare-styleable name="SettingItemView">
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color|reference"/>
        <attr name="leftText" format="string"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftTextColor" format="color|reference"/>
        <attr name="leftIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="hasRightArrow" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="TitleEditorView">
        <attr name="titleText"/>
        <attr name="editorHint"/>
        <attr name="selectText" format="string"/>
        <attr name="type" format="enum">
            <enum name="editor" value="0"/>
            <enum name="dateSelector" value="1"/>
            <enum name="selector" value="2"/>
        </attr>
    </declare-styleable>
</resources>